#!/bin/bash

if [ "$#" -lt 1 ]; then
    echo "Usage: $0 outTopDir genomeBuild"
    exit 1
fi
BUILD=$1

TOP_DIR="/Users/bretbarnes/Documents"
DAT_DIR="${TOP_DIR}/data/improbe/GRCh36-38.mm10.FWD_SEQ.21022021/designOutput"
OUT_DIR="${DAT_DIR}/prbDB"

DES="${DAT_DIR}/${BUILD}-21022021_improbe-designOutput.tsv.gz"
OUT="${OUT_DIR}/${BUILD}-21022021_improbe-designOutput."

mkdir -p ${OUT_DIR}

gzip -dc ${DES}/${BUILD}-21022021_improbe-designOutput.tsv.gz | cut -f 1,48 | \
    head -n 20 | \
    grep -v Seq_ID | \
    perl -pe 's/\n$//; @d=split(/\t/,$_); s/^.*$//; print "$[1]\t$d[0]\n"'

# End of file
